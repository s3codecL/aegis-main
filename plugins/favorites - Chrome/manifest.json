{
  "manifest_version": 3,
  "name": "Aegis Favorites Trigger",
  "version": "1.4",
  "description": "Triggers Aegis favorites directly from the site using selected text.",
  "permissions": [
    "contextMenus",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_title": "Aegis Favorites Trigger"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}